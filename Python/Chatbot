print("Hey there! I'm your bot assistant. What would you like to discuss?")
veg=["vegetable biryani","lasagna","paneer chilli"]
nonveg=["mutton korma","fish biryani","chicken"]
coffees=["Espresso","Americano","Cappuccino","latte","flat white"]

def menu():
    inp=input("veg \n nonveg\ncoffees")
    if (inp=="veg"):
            for i in veg:
                print(i)
    elif:
        for i in nonveg:
            print(i)
    else:
        for i in coffees:
            print(i)
def book_table():
    time=input("Morning or Evening")
    a=input("Pick a date")
    b=input("for how many people?")
    print("Your reservation is successfully completed!! A table for "+b+" people on "+a+" day is reserved for "+time)
def basic_question():
    a=input("pls ask your queries")
    print("your query is being processed")
    print(".\n.\n.\n.")
def contact():
    print("Toll free within the U.S.:\n 1-866-4EVOQUE (438-6783)")
    print("Toll free outside the U.S.:\n +1-469-498-8034")

while(True):
    print("\n1.Restaurant menu \n2.Book a table \n3.Basic Question \n4.Learn about restaurant")
    a=int(input())
    if(a==1):
        menu()
    elif(a==2):
        book_table()
    elif(a==3):
        basic_question()
    elif(a==4):
        contact()
    else:
        print("\nI don't understand that choice, please try again.\n")
 
